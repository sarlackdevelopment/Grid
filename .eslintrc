{
  "env": {
    "browser": true
  },
  "plugins": [
    "babel",
    "react",
    "eslint-plugin-import"
  ],
  "extends": [
    "airbnb-base",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "eslint:recommended"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "rules": {
    "no-bitwise": "off",
    "max-lines": [
      "error",
      {
        "max": 500
      }
    ],
    "func-names": "off",
    "import/prefer-default-export": 0,
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "no-useless-constructor": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "linebreak-style": 0,
    "indent": [
      "error",
      4
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "comments": 300
      }
    ],
    "no-multi-spaces": [
      "error",
      {
        "exceptions": {
          "Property": true,
          "VariableDeclarator": true
        }
      }
    ],
    "react/prop-types": 0,
    "react/no-deprecated": 0,
    "no-nested-ternary": 0,
    "react/no-unescaped-entities": 0,
    "no-param-reassign": 0,
    "no-console": 0,
    "class-methods-use-this": 0,
    "newline-per-chained-call": 0,
    "function-paren-newline": 0,
    "no-invalid-this": 0,
    "babel/no-invalid-this": 1,
    "global-require": 0,
    "spaced-comment": "off",
    "no-continue": "off",
    "default-case": "off",
    "no-plusplus": "off",
    "radix": [
      "error",
      "as-needed"
    ],
    "no-named-as-default-member": 0,
    "no-dynamic-require": 0,
    "no-unused-vars": "off",
    "camelcase": 0,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never"
      }
    ],
    "no-use-before-define": "off"
  },
  "globals": {
    "JSX": true
  }
}
